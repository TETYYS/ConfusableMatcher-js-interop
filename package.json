{
    "name": "confusablematcher-js-interop",
    "description": "TypeScript NAPI Interop for ConfusableMatcher.",
    "version": "1.0.0",
    "license": "MIT",
    "contributors": [
        "TETYYS",
        "Robinlemonz"
    ],
    "main": "build/src/index.js",
    "types": "build/src/index.d.ts",
    "gypfile": true,
    "sideEffects": false,
    "engines": {
        "node": ">=14.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TETYYS/ConfusableMatcher-js-interop.git"
    },
    "bugs": {
        "url": "https://github.com/TETYYS/ConfusableMatcher-js-interop/issues"
    },
    "keywords": [
        "napi",
        "confusable",
        "matcher",
        "algorithm",
        "c++",
        "gyp",
        "native"
    ],
    "scripts": {
        "install": "echo \"Preventing Build on Install\" && exit 0",
        "prebuild": "./scripts/prebuild.sh",
        "build": "tsc -b tsconfig.build.json",
        "build:clean": "docker-compose up confusablematcher-js-interop-build-clean",
        "clean": "tsc -b tsconfig.build.json --clean",
        "postclean": "rimraf build coverage src/ConfusableMatcher/CMakeBuild",
        "test": "jest --verbose --passWithNoTests",
        "test:watch": "yarn test --watchAll",
        "test:coverage": "yarn test --coverage",
        "test:clean": "docker-compose up confusablematcher-js-interop-test-clean",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint --cache ./**/*.{js,ts}",
        "lint:fix": "yarn lint --fix",
        "format": "prettier --list-different ./**/*.{js,ts,json,md,yaml}",
        "format:fix": "prettier --write ./**/*.{js,ts,json,md,yaml}",
        "spelling": "cspell --config=.cspell.json ./**/*.{js,ts,md}"
    },
    "dependencies": {
        "node-addon-api": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.41",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "cspell": "^5.3.12",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-eslint-plugin": "^3.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.3.5",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-keys-fix": "^1.1.1",
        "husky": "^4",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.5",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
}
